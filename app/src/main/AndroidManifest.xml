<?xml version="1.0" encoding="utf-8"?>
<manifest package="bass.candellier.lefevre.supervision"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name=".MainActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".SetPreferencesFragmentActivity"
			android:label="@string/title_activity_set_preferences_fragment">
		</activity>

		<activity
			android:name=".StatsDDActivity"
			android:label="@string/title_activity_usageDD">
		</activity>
		<activity
			android:name=".StatsMPActivity"
			android:label="@string/title_activity_usageMP">
		</activity>
		<activity
			android:name=".StatsTempActivity"
			android:label="@string/title_activity_temperatures">
		</activity>

		<activity
			android:name=".PlotDDActivity"
			android:label="@string/title_activity_usageDD">
		</activity>
		<activity
			android:name=".PlotMPActivity"
			android:label="@string/title_activity_usageMP">
		</activity>
		<activity
			android:name=".PlotTempActivity"
			android:label="@string/title_activity_temperatures">
		</activity>
	</application>

</manifest>
