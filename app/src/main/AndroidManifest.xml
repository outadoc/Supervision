        </activity>
        <activity
            android:name=".SetPreferencesFragmentActivity"
            android:label="@string/title_activity_set_preferences_fragment" >
        </activity>
        <activity
            android:name=".StatsDDActivity"
            android:label="@string/title_activity_usageDD" >
        </activity>
        <activity
            android:name=".StatsMPActivity"
            android:label="@string/title_activity_usageMP" >
